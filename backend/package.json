{
  "name": "jewelry-app-backend",
  "version": "1.0.0",
  "description": "专业精美的首饰展示应用 - 后端 API (Cloudflare Workers + D1)",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:migrate": "wrangler d1 execute jewelry-db --file=./migrations/0001_initial_schema.sql",
    "db:migrate:admin": "wrangler d1 execute jewelry-db --file=./migrations/0002_admin_users.sql",
    "db:migrate:all": "npm run db:migrate && npm run db:migrate:admin",
    "db:migrate:remote": "wrangler d1 execute jewelry-db --file=./migrations/0001_initial_schema.sql --remote",
    "db:migrate:admin:remote": "wrangler d1 execute jewelry-db --file=./migrations/0002_admin_users.sql --remote",
    "db:migrate:all:remote": "npm run db:migrate:remote && npm run db:migrate:admin:remote",
    "db:query": "wrangler d1 execute jewelry-db"
  },
  "devDependencies": {
    "wrangler": "^4.53.0"
  }
}

